<h1>Eat The Burger</h1>

<div class="row">
  <div id="fresh" class="text-left">
    {{#each burger}}
      {{#unless this.devoured}}
          <div class="burger-div">
            {{this.id}}. {{this.burger_name}}
    
          </div>
          <form action="/?_method=PUT" method="POST">
            <div class="inline-form">
              <input type="hidden" name="id" value="{{this.id}}"/>
              <button class="btn" type="submit">Devour it!</button>
            </div>
          </form>

      {{/unless}}
    {{/each}}
  </div>

  <div id="devoured" class="text-right">
    {{#each burger}}
      {{#if this.devoured}}
  
          <div  class="burger-div">
            {{this.id}}. {{this.burger_name}}
          </div>

      {{/if}}
    {{/each}}
  </div>
</div>

<div class="row">
  <h2>Add a Burger</h2>
  <form class="form" method="POST" action="/">
    <div class="inline-form">
      <textarea type="text" name="burger_name"></textarea>
      <button class="btn" type="submit">Add A Burger!</button>
    </div>
  </form>
</div>

